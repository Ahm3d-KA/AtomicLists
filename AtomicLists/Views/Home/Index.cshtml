@{
    ViewData["Title"] = "Home Page";
}

<div class="grid grid-cols-5 grid-rows-2 gap-4 px-5 pt-7">
    
    <!-- sidebar -->
    <div class="flex-column space-y-2  col-span-1">
        <div>
            <h2 class="text-center text-xl">Atomic Lists</h2>
        </div>
        <div class="flex-column space-y-1">
            <div class="border-2">
                <p class="text-center">Overview</p>
            </div>
            <div class="border-2">
                <p class="text-center">Calendar</p>
            </div>
            <div class="border-2">
                <p class="text-center">Analytics</p>
            </div>
        </div>
        <div class="flex flex-col">
            <h3>PROJECTS</h3>
            <p>School</p>
            <p>Exercise</p>
        </div>
        <div class="flex flex-col">
            <a asp-controller="Task" asp-action="Index">
                <h3>TASKS</h3>
            </a>
            <p>Walk the dog</p>
            <p>Do math exercise 6.2</p>
        </div>
    </div>

    <!-- header area and meta information -->
    <div class="row-span-1 col-span-4">
        
        <div class="flex flex-col space-y-4">
            <!-- header and tags -->
            <div class="flex flex-col">
                <!-- header -->
                <div>
                    <h1 class="text-5xl">School</h1>
                </div>
                <!-- tags -->
                <div class="flex-row space-x-1">
                    <span>Projects</span>
                    <span>Personal</span>
                </div>
            </div>
            <!-- colorful box with extra information -->
            <div class="flex flex-col justify-end w-full h-40 bg-gradient-to-r from-red-500 to-yellow-500">
                <h2 class="text-4xl">School</h2>
                <span>Revision is very important</span>
            </div>
            <a asp-controller="Task" asp-action="Index">
                <h1 class="text-3xl">Here are your tasks</h1>
            </a>
            <div class="grid grid-cols-3 gap-4 p-4 grid-rows-4">
                <!-- old task card -->
                <!-- 
                <div class="flex flex-col p-4 border-2 border-gray-600 rounded-lg">
                    <span class="text-sm">Due in 5 days</span>
                    <span>Complete biology homework</span>
                    <span class="text-sm">Priority high</span>
                </div>
                -->
                <div class="card bg-base-100 shadow-xl">
                    <div class="card-body">
                        <h2 class="card-title">Biology</h2>
                        <p>Do homeostasis revision</p>
                        <div class="card-actions justify-end">
                            <button class="btn btn-outline btn-sm">Preview</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- task grid -->
