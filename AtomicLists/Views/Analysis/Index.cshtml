@model Stats

@{
    ViewData["Title"] = "Analysis Index";
}

@if (Model == null)
{
    <p>No stats available</p>
}
else
{
    <!-- Whole page flex box -->
    <div class="flex flex-col gap-6 items-center justify-center h-full w-full bg-gray-100 rounded-lg shadow-lg p-8">
        
        <!-- Header -->
        <h1 class="text-4xl text-gray-700 font-bold mb-4">Task Statistics</h1>
        
        <!-- Flexbox of main stats -->
        <div class="flex flex-row gap-6 items-center justify-center h-40 w-full bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow duration-500 ease-in-out">
            
            <!-- total tasks stat -->
            <div class="flex flex-col gap-2 items-center h-10">
                <h2 class="text-2xl text-gray-500 font-semibold">Total Tasks:</h2>
                <p class="text-xl text-gray-700">@Model.TotalTasks</p>
                <hr class="bg-gray-300 h-0.5 w-full"/>
            </div>
            
            <!-- completed tasks stat -->
            <div class="flex flex-col gap-2 items-center h-10">
                <h2 class="text-2xl text-gray-500 font-semibold">Completed Tasks:</h2>
                <p class="text-xl text-gray-700">@Model.TotalCompleted</p>
                <hr class="bg-gray-300 h-0.5 w-full"/>
            </div>
            
            <!-- % of tasks completed stat -->
            <div class="flex flex-col gap-2 items-center h-10">
                <h2 class="text-2xl text-gray-500 font-semibold">% of Tasks Completed:</h2>
                <p class="text-xl text-gray-700">@Model.PercentComplete</p>
                <hr class="bg-gray-300 h-0.5 w-full"/>
            </div>
        </div>
    </div>
}


